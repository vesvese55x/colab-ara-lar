<?xml version="1.0" encoding="UTF-8"?>
<xfce-desktop>
    <background>
        <property name="image-path" type="string" value="file:///tmp/resim.jpg"/>
        <property name="image-style" type="int" value="3"/>
        <property name="color1" type="string" value="#000000"/>
        <property name="color2" type="string" value="#000000"/>
        <property name="shaded" type="bool" value="false"/>
        <property name="tiling" type="bool" value="false"/>
        <property name="align" type="int" value="0"/>
        <property name="zoom" type="int" value="1"/>
        <property name="centered" type="bool" value="true"/>
    </background>

    <icon-sizes>
        <property name="panel-icon-size" type="int" value="48"/>
    </icon-sizes>

    <screen> <!-- Bu bölüm ekran ayarları içindir. -->
        <property name="workspaces" type="int" value="4"/>
        <property name="background-color" type="string" value="#000000"/>
        <property name="desktop-icons" type="bool" value="true"/>
    </screen>
</xfce-desktop>
